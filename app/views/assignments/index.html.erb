<h1>Assignments</h1>



<%if current_user.type == "Teacher" %>
<ul class="list-group">
<% @users.each do |user| %>

<%if user.type == "Student" %>
<li class="list-group-item">
<%= user.name %>

<%= link_to "Add Assignment", assignments_path(:user_id => user), :method => :post , :class => "btn btn-warning" %>

</li>

<% end %>

<% end %>
<% end %>
</ul>


<%if current_user.type == "Student" %>

<% for assignment in @user.assignments %>
 
    	<li class="list-group-item">
      <%= assignment.lesson.title%>

      <%= link_to '<i class="glyphicon glyphicon-trash"></i> '.html_safe, assignment, :method => :delete ,:class => "btn btn-danger"%>

      </li>
      
        <% end %>
  <%end %>
