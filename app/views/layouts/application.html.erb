<!DOCTYPE html>
<html>
  <head>
    <title>WordSearch</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <nav class="navbar navbar-default navbar-fixed-top"  >

    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/cards">WordSearch</a>
      </div>


      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
        <li><%= link_to 'My Profile', user_path(current_user) %></li>
        <%end %>
        <li><%= link_to('First Time', home_index_path, :method => :get) %>  </li>  
        <li><%= link_to('Assignments',  assignments_path, :method => :get) %>  </li>  
        <li><%= link_to('Lessons', lessons_path, :method => :get) %> </li>  
        <li><%= link_to('Cards', cards_path, :method => :get) %>  </li>  
        <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %>  </li>  
      
      </ul>

    </div>
  </nav>

  <body>

  <%= yield %>

  </body>
