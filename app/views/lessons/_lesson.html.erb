<div class="col-md-4 blog-main box text-center" id="lesson_<%= lesson.id %>">


                 
            <div class="panel panel-info" ><!-- Panel Info -->

                  <div class="panel-heading">
                    <h3 class="panel-title"><%= lesson.title %></h3>
                  </div>

                  <div class="panel-body" id="panel"><!-- Panel Body -->
                    
                    <div style="color: #3BB2D6;"><%= time_ago_in_words(lesson.created_at) %></div>
                    <br>


                    <div class="btn-group" role="group" aria-label="...">

                           <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#myupdatelesson_<%= lesson.id %>">
                          Edit
                        </button>

                         <%= link_to 'Play', lesson ,class: "btn btn-primary"%> 
                       
                         <%= link_to 'Destroy', lesson, method: :delete, class: "btn btn-danger", remote: true %>
                        
                       
                    </div>

                  </div><!-- Panel Body -->

            </div><!-- Panel Info -->


               <!-- Modal - update cards -->
                  <%= form_for(lesson, :method => :put, remote: true, :html => {:multipart => true}) do |f| %>
                  <div class="modal fade" id="myupdatelesson_<%= lesson.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Edit</h4>
                      </div>
                      <div class="modal-body">

                      <div class="field">
                        <%= f.label :title %><br>
                        <%= f.text_area :title, class: "form-control" %>
                      </div>
                      <div class="form-group">
                        <%= f.label :diffculty%><br>
                        <%= f.select(:size, options_for_select([['Easy',7], ['Moderate',10],['Hard',15]]), {}, {class: "form-control"}) %>
                      </div>
                  
                      </div>
                      <div class="modal-footer">
                        <button type="button" id="myupdatebutton_<%= lesson.id %>" class="btn btn-default" data-dismiss="modal">Close</button>
                         <%= submit_tag "Update", class: "btn btn-primary" %>

                      </div>
                    </div>
                  </div>
                  </div>
                  <% end %>
            <!-- Modal -->

            


</div>